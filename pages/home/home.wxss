.top-menu{
  height:70rpx;
  width: 100%;
  margin-bottom: 5rpx;
}
.menu-scroll{
  height:70rpx;
  width:100%;
  white-space: nowrap;
  flex:none;
  display: flex;
}
.menu-item{
  display: inline-block;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 70rpx;
  color: #6F6F6F;
  font-size: 15px;
}
.menu-item .active{
  color: #f84e37;
}
.menu-item .active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 5rpx;  
  background: #f84e37;  
}
.swiper-img{
  height:100%;
  width:100%;
}
.img-ad{
  height:300rpx;
}

.section-blocks{
